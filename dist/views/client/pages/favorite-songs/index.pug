extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main
    .container.my-3
        .row
            .col-12
                +box-head(title)
        
        .row 
            each song in favoriteSongs
                .col-6.mb-3 
                    div(class="song-item")
                        div(class="inner-image")
                            a(href=`/songs/detail/${song.infoSong.slug}`) 
                                img(src=song.infoSong.avatar)
                        div(class="inner-content")
                            div(class="inner-title") 
                                a(href=`/songs/detail/${song.infoSong.slug}`) #{song.infoSong.title}
                            div(class="inner-singer") <i class="fa-solid fa-microphone-lines" ></i>  #{song.infoSinger.fullName}
                            div(class="inner-heart active" button-favorite=song.infoSong.id) 
                                <i class="fa-solid fa-heart" ></i> Yêu thích
                            div(class="inner-time") <i class="fa-regular fa-clock" ></i> Hôm nay
                            
            